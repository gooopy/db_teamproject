<div id="wrapper">
<!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand"> <a href="#"> Underwood </a> </li>
      <li> <a href="#">Dashboard</a> </li>
      <li> <a href="#">Settings</a> </li>
      <li> <%= link_to "Join", {:controller => :user, :action => :new}, {:style =>  'display: inline;' } %>
      	|
        <% if current_user != nil %>
          <%= link_to "Logout", {:controller => :session, :action => :destroy}, {:style =>  'display: inline;' } %>
        <% else %>
          <%= link_to "Login", {:controller => :session, :action => :new}, {:style =>  'display: inline;' } %>
        <% end %>
      </li>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->
  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <% if current_user != nil %>
            <h1>Hello <%= current_user.login_id %> ! Welcome</h1>
          <% else %>
            <h1>Hello Visitor ! Please log in</h1>
          <% end %>
          <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Menu Toggle Script -->
<script>
  $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
  });
</script>