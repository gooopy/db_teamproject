<div id="wrapper">
  <%= render "/static_pages/admin_sidebar" %>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          
            <h1>Listing Users</h1>

            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Sex</th>
                  <th>Address</th>
                  <th>Birthdate</th>
                  <th>Cellphone</th>
                  <th>type</th>
                  <th colspan="2"></th>
                </tr>
              </thead>

              <tbody>
                <% @all_users.each do |user| %>
                  <tr>
                    <td><%= user.login_id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.sex %></td>
                    <td><%= user.address %></td>
                    <td><%= user.birthdate %></td>
                    <td><%= user.cellphone %></td>
                    <% if user.is_eval %>
                    <td>eval</td>
                    <% else %>
                    <td>submit</td>
                    <% end %>

                    <% if !user.is_admin %>
                    <td><%= link_to 'Delete', user, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
                    <% else %>
                    <td></td>
                    <% end %>
                    
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <br><br><br>

          <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Menu Toggle Script -->
<script>
  $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
  });
</script>
